		<location id="id18" x="110" y="-76">
			<name x="100" y="-110">Dusk</name>
			<label kind="invariant" x="127" y="-85">timeOfDay &lt;= 10800</label>
		</location>
		<location id="id19" x="-85" y="51">
			<name x="-136" y="34">Dawn</name>
