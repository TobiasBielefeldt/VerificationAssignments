			<label kind="assignment" x="-58" y="-38">isPumpOn = false</label>
			<nail x="0" y="-25"/>
		</transition>
		<transition>
			<source ref="id21"/>
			<target ref="id22"/>
			<label kind="synchronisation" x="-51" y="-110">TurnOnPump?</label>
			<label kind="assignment" x="-51" y="-93">moisture += 20,
