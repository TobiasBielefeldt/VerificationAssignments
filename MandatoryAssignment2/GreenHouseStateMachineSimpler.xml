		</transition>
		<transition>
			<source ref="id23"/>
			<target ref="id23"/>
			<label kind="synchronisation" x="-178" y="-8">TurnOffLED?</label>
			<nail x="-86" y="34"/>
			<nail x="-86" y="-34"/>
