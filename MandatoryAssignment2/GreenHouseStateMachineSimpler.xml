		<transition>
			<source ref="id24"/>
			<target ref="id23"/>
			<label kind="synchronisation" x="25" y="68">TurnOffLED?</label>
			<label kind="assignment" x="34" y="34">light = 0</label>
			<nail x="59" y="34"/>
		</transition>
		<transition>
			<source ref="id23"/>
			<target ref="id24"/>
			<label kind="synchronisation" x="25" y="-51">TurnOnLED?</label>
			<label kind="assignment" x="34" y="-68">light = 10</label>
			<nail x="59" y="-34"/>
		</transition>
	</template>
	<system>// List one or more processes to be composed into a system.
system UserInputSimulation,Gateway,Worker, Pump, LED, DayNightCycle;</system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment></comment>
		</query>
		<query>
			<formula>E&lt;&gt; UserInputSimulation.UpdateVariable</formula>
			<comment></comment>
		</query>
		<query>
			<formula>E&lt;&gt; Worker.SendData</formula>
			<comment></comment>
		</query>
		<query>
			<formula>E&lt;&gt; Gateway.SendToMQTT</formula>
			<comment></comment>
		</query>
		<query>
			<formula>A[] (DayNightCycle.Night and x &gt;= 12 imply LED.OFF)</formula>
			<comment></comment>
		</query>
		<query>
			<formula></formula>
			<comment></comment>
		</query>
		<query>
			<formula>inf{Train(i).Cross} : Train(i).z</formula>
			<comment></comment>
		</query>
		<query>
			<formula>sup{LED.OFF} : x</formula>
			<comment></comment>
		</query>
		<query>
			<formula>inf{LED.OFF} : x</formula>
			<comment></comment>
		</query>
	</queries>
</nta>
